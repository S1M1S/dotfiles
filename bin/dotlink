#!/bin/bash
DF="dotfiles"

cd "$HOME"
rm -rf .vim
rm -r bin
rm .vimrc
rm .zshrc
rm .tmux.conf

ln -s $DF/.vim .vim
ln -s $DF/bin bin
ln -s $DF/.vimrc .vimrc
ln -s $DF/.zshrc .zshrc
ln -s $DF/.tmux.conf .tmux.conf

# setup kitty
cd ~/.config
mkdir kitty &> /dev/null
cd kitty
rm kitty.conf &> /dev/null
ln -s "$DF/.config/kitty/kitty.conf" kitty.conf

cd ~
